{

  "manifest_version": 2,
  "name": "RATS Tracker",
  "short_name": "RATS Tracker",
  "version": "0.3.0",
  "homepage_url": "http://tamilan.na.ten/cae/#Tools",
  "description": "RATS log assistant",
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png"
  },
  
  "permissions": [
    "notifications", 
    "storage",
    "tabs",
    "clipboardWrite"
  ], 

  "background": {
    "scripts": ["/lib/pouchdb-6.1.1.js", "js/background.js"]
  },
  
  "options_ui": {
    "page": "options/options.html"
  },
    
  "browser_action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "64": "images/icon-64.png"
    },
    "default_title": "RATS",
    "default_popup": "popup/popup.html",
    "browser_style": true
  },  

  "content_scripts": [
    {
      "matches": ["http://pafoap01:8888/pls/prod/ece_ewo_web.ece_ewo_page?in_ewr_no=EWS*", "http://pafoap01:8888/pls/prod/ece_ewo_web.ece_ewo_page?in_ewr_id=*"],
      "js": ["js/rats-ews-ece.js"]
    }
  ]

}