{

  "manifest_version": 2,
  "name": "RATS Tracker",
  "short_name": "RATS Tracker",
  "version": "0.3.2",
  "homepage_url": "http://170.64.172.49/cae/#Tools",
  "description": "RATS log assistant",
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png"
  },
  
  "applications": {
    "gecko": {
      "id": "RatsTracker@tenneco.com",
      "strict_min_version": "50.0",
      "update_url": "https://s3.us-east-2.amazonaws.com/tennecomilan/RatsTrackerUpdates.json"
    }
  },
  
  "permissions": [
    "notifications", 
    "storage",
    "tabs",
    "clipboardWrite",
    "downloads"
  ], 

  "background": {
    "scripts": ["lib/moment.js", "js/background.js"]
  },
  
  "options_ui": {
    "page": "options/options.html"
  },
    
  "browser_action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "64": "images/icon-64.png"
    },
    "default_title": "RATS",
    "default_popup": "popup/popup.html",
    "browser_style": true
  },  

  "content_scripts": [
    {
      "matches": ["*://*/pls/prod/ece_ewo_web.ece_ewo_page?in_ewr_no=EWS*", "*://*/pls/prod/ece_ewo_web.ece_ewo_page?in_ewr_id=*","*://*/pls/prod/ece_web.ece_page?in_ece_id=*", "*://*/pls/prod/worc_wo_rpt.wo_view?in_wo_no=*", "*://*/pls/prod/worc_wo_rpt.wo_view?in_wo_id=*"],
      "js": ["lib/moment.js", "js/rats-ews-ece.js"],
      "css": ["css/style.css"]
    }
  ]

}